<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_main_hz_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:text="华住SeekBar" />


    <Button
        android:id="@+id/btn_main_interpolator_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="属性动画插值器练习" />

    <Button
        android:id="@+id/btn_main_pwd_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="密码框练习" />

    <Button
        android:id="@+id/btn_main_expandable_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="可扩展的显示框" />

    <Button
        android:id="@+id/btn_main_green_dao_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="GreenDao Test" />


    <Button
        android:id="@+id/btn_main_lean_text_view_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="Lean View" />

</LinearLayout>
